<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NockHub" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->

        <item name="colorPrimary">@color/lighter_dark</item>
        <item name="colorPrimaryVariant">@color/darker_dark</item>

        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <!-- Recycler gradient color -->
        <item name="android:colorEdgeEffect" tools:targetApi="l">@color/accent</item>

        <!-- Burger menu color -->
        <item name="drawerArrowStyle">@style/BurgerMenuStyle</item>

        <!-- Activity tittle color -->
        <item name="toolbarStyle">@style/CustomToolBarStyle</item>

        <!-- Material DatePicker style -->
        <item name="materialCalendarTheme">@style/MaterialDatePickerStyle</item>

        <!-- Material TimePicker style -->
        <item name="materialTimePickerTheme">@style/TimePickerStyle</item>
    </style>
</resources>