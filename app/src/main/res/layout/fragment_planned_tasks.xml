<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            type="com.example.taskhub.view.TaskViewModel"
            name="taskViewModel"/>
    </data>

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PlannedTasksFragment"
        android:background="@color/darker_dark">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/planned_empty_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorized_dark"
                android:textAlignment="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:textSize="20sp"
                android:text="No tasks planned so far"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/planned_tasks_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </FrameLayout>
</layout>
